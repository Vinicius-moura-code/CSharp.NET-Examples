
@{
    ViewBag.Title = "Buscar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Usuario/Buscar.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Usuario/Buscar.js"></script>


<div class="container-fluid">
    <br />
    <h2 class="card-title">Buscar</h2>
    <br />
    <div class="row">
        <div class="col-md-4">
            <input style="width:100%;" type="text" class="form-control" placeholder="Insira seu nome :" id="txtNomeUsuario" />
        </div>
        <div class="col-md-2">
            <input type="button" class="btn btn-outline-success" id="btnBuscar" value="buscar" />

        </div>
        <div class="col-md-6">
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped" id="tableUsuario"></table>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Página de cadastro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Você esta preste a ser redirecionado para página de cadastro de usuario</p>
                <p>Deseja continuar ?</p>
            </div>
            <div class="modal-footer">

                <a href="/Usuario/Incluir" style="text-align:center;  font-weight:bold;" class="list-group-item list-group-item-success">
                    Sim
                </a>
                <a href="#" style="text-align:center; font-weight:bold;" class="list-group-item list-group-item-danger " data-dismiss="modal">Não</a>

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Deletar usuário</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>O usuario ${nome}</p>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>